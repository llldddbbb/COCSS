<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scnu.dao.CourseMapper" >

  <resultMap id="BaseResultMap" type="com.scnu.entity.Course" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="courseName" property="courseName" jdbcType="VARCHAR" />
    <result column="number" property="number" jdbcType="INTEGER" />
    <result column="teacher" property="teacher" jdbcType="VARCHAR" />
    <result column="startTime" property="startTime" jdbcType="TIMESTAMP" />
    <result column="endTime" property="endTime" jdbcType="TIMESTAMP" />
    <result column="createTime" property="createTime" jdbcType="TIMESTAMP" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
  </resultMap>

  <update id="reduceNumber">
    update course
    set number=number-1
    where id=#{id}
    and startTime &lt;= #{executeTime}
    and endTime &gt;= #{executeTime}
    and number &gt; 0
  </update>

  <select id="listCourse" resultMap="BaseResultMap" parameterType="Map">
    select * from course
    <if test="start!=null and pageSize!=null">
      limit #{start},#{pageSize}
    </if>
  </select>

  <select id="getCourseById" resultType="Course">
    select * from course
    where id=#{id}
  </select>

  <select id="getCourseCount" resultType="Integer">
     select count(*) from course
  </select>

  <select id="listCourseByStudentId" resultMap="BaseResultMap">
    SELECT * FROM course WHERE id IN (SELECT courseId FROM stu_cou WHERE stuId=#{studentId})
  </select>

</mapper>