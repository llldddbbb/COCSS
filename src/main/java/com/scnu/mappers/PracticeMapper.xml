<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scnu.dao.PracticeMapper" >

  <resultMap id="BaseResultMap" type="com.scnu.entity.Practice" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="schoolName" property="schoolName" jdbcType="VARCHAR" />
    <result column="site" property="site" jdbcType="VARCHAR" />
    <result column="startTime" property="startTime" jdbcType="TIMESTAMP" />
    <result column="endTime" property="endTime" jdbcType="TIMESTAMP" />
    <result column="createTime" property="createTime" jdbcType="TIMESTAMP" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
  </resultMap>

  <update id="reduceNumber">
    update practice
    set number=number-1
    where id=#{id}
    and startTime &lt;= #{executeTime}
    and endTime &gt;= #{executeTime}
    and number &gt; 0
  </update>

  <select id="listPractice" resultMap="BaseResultMap" parameterType="Map">
    select * from practice
    <if test="start!=null and pageSize!=null">
      limit #{start},#{pageSize}
    </if>
  </select>

  <select id="getPracticeById" resultType="Practice">
    select * from practice
    where id=#{id}
  </select>

  <select id="getPracticeCount" resultType="Integer">
     select count(*) from practice
  </select>

  <select id="listPracticeByStudentId" resultMap="BaseResultMap">
    SELECT * FROM practice WHERE id IN (SELECT practiceId FROM stu_pra WHERE stuId=#{studentId})
  </select>

</mapper>